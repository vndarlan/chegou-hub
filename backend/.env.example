# Configurações Django
DJANGO_SECRET_KEY=sua-chave-secreta-aqui
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Segurança CSRF
# DISABLE_CSRF=false  # (Padrão) Mantém validação CSRF ativa no DRF
# DISABLE_CSRF=true   # (Debug) Desabilita validação CSRF globalmente no DRF - USE APENAS EM DESENVOLVIMENTO

# Banco de Dados
DATABASE_URL=postgresql://user:password@localhost:5432/chegou_hub

# Redis (para Django-RQ)
REDIS_URL=redis://localhost:6379/0

# APIs Externas
OPENAI_API_KEY=sua-api-key-openai
OPENAI_ADMIN_API_KEY=sua-api-key-admin-openai
ANTHROPIC_API_KEY=sua-api-key-anthropic
SMMRAJA_API_KEY=sua-api-key-smmraja

# Serviços Externos
ECOMHUB_SELENIUM_SERVER=https://selenium-server.com
DROPI_EXTRACTOR_SERVER=http://localhost:8002
DROPI_TOKEN_SERVICE_URL=http://localhost:8002

# Railway/Produção
RAILWAY_ENVIRONMENT_NAME=production

# Frontend URL (para links em emails)
# Desenvolvimento: http://localhost:3000
# Teste: https://chegouhubteste.up.railway.app
# Produção: https://www.chegouhub.com.br
FRONTEND_URL=http://localhost:3000